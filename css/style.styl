    blue: #052FFF;
    green: #0CE871;
    yellow: #FFF200;
    orange: #E85E0C;
    pink: #DC00FF;

    c1: lightness(@blue, 80%);
    c2: lightness(@green, 80%);
    c3: lightness(@yellow, 80%);
    c4: lightness(@orange, 80%);
    c5: lightness(@pink, 80%);

    background-color: @white;
    margin: 0;



.logo {
    width: 523px;
    height: 42px;
    background: url('../img/logo_black.png');
    text-align: center;
    margin: 2em auto;
    font-family: Helvetica;
    font-size: 24px;
    color: #222222;
    font-weight: bold;
}

.full-img {
    max-width: 100%;
    bottom: 0;
    left: 0;
    margin: auto;
    overflow: auto;
    position: fixed;
    right: 0;
    top: 0;
}

section
    width: 80%;
    margin: 8em auto 3em auto;
    font-family: 'Crimson Text', serif;
    font-size: 21px;
    text-align: justify;
    text-justify: inter-word;
    h1
        text-align center

.first-caps:first-letter {
    font-size: 50px;
}

figcaption
    font-family: 'Crimson Text', serif;
    font-size: 16px;

.testimonials
    p
        margin-bottom 3em
        font-style italic
    i
        font-weight bold

.contact-form
    margin: 0 auto;
    width: 300px;
    text-align center
.prayer {
    margin: 1em auto;
    max-width: 90%;
    text-align: center;
}


.nav-link
    bg: #f2b44c;
    fg: white;
    padding: 1em;
    border: 2px solid @fg;
    width: 70%;
    text-align: center;
    text-transform: uppercase;
    margin: 1em auto;
    font-family: "Helvetica Neue";
    font-weight: 300;
    font-kerning: auto;
    cursor: pointer;
    color: @fg;
    .selected
        color: @bg;
        background-color: @fg;


.wrapper {
    width: 60%;
    overflow: hidden;
    padding: 2em;
}

.nav {
    position: fixed;
    top: 0;
    right: 0;
    width: 38.2%;
    background-color: #f2b44c;
    height: 100%;
    padding-top: 2em;
}


a {
    text-decoration: none;
}

.yoga-class
    margin 1em auto
    text-align center
    .yoga-class-title
        font-weight bold




